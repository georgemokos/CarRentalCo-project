@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CarRentalCo - Home</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    /* Global Styles */
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }
    /* Hero Section */
    .hero {
      background: url('images/frontpage.jpg') no-repeat center center/cover;
      height: 100vh;
      position: relative;
      color: #fff;
    }
    .hero::before {
      content: '';
      position: absolute;
      top:0;
      left:0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
    }
    .hero-content {
      position: relative;
      z-index: 2;
    }
    .hero h1 {
      font-size: 4rem;
      font-weight: bold;
      text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
    }
    .hero p {
      font-size: 1.5rem;
    }
    /* Navigation (Optional) */
    .navbar {
      background: transparent;
    }
    /* Feature Cards */
    .feature-card {
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }
    /* Testimonial Section */
    .testimonial {
      background: #f8f9fa;
      padding: 3rem 0;
    }
    .testimonial .carousel-item {
      text-align: center;
      padding: 2rem;
    }
    .testimonial .carousel-item img {
      border-radius: 50%;
      width: 100px;
      height: 100px;
      object-fit: cover;
      margin-bottom: 1rem;
    }
    /* Call-to-Action Section */
    .cta {
      background: linear-gradient(135deg, #0d6efd, #6610f2);
      color: #fff;
      padding: 3rem 0;
      text-align: center;
    }
    .cta h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
    .cta p {
      font-size: 1.25rem;
      margin-bottom: 1.5rem;
    }
  </style>
</head>
 <!-- Hero Section -->
  <header class="hero d-flex align-items-center mt-3">
    <div class="container hero-content text-center">
      <h1>Experience Luxury on the Road</h1>
      <p>Rent the car of your dreams at unbeatable prices.</p>
      <a href="/fleet" class="btn btn-lg btn-primary">Explore Our Fleet</a>
    </div>
  </header>

  <!-- Features Section -->
  <section id="features" class="py-5">
    <div class="container">
      <div class="row text-center mb-4">
        <div class="col">
          <h2>Our Services</h2>
          <p class="text-muted">Why choose CarRentalCo?</p>
        </div>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card feature-card h-100 p-3 border-0">
            <div class="card-body text-center">
              <i class="bi bi-speedometer2 display-4 text-primary mb-3"></i>
              <h5 class="card-title">Fast Booking</h5>
              <p class="card-text">Reserve your car in minutes with our intuitive online booking system.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card feature-card h-100 p-3 border-0">
            <div class="card-body text-center">
              <i class="bi bi-shield-check display-4 text-success mb-3"></i>
              <h5 class="card-title">Safety First</h5>
              <p class="card-text">Our vehicles are meticulously maintained to ensure your safety and peace of mind.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card feature-card h-100 p-3 border-0">
            <div class="card-body text-center">
              <i class="bi bi-geo-alt display-4 text-danger mb-3"></i>
              <h5 class="card-title">Nationwide Coverage</h5>
              <p class="card-text">Service centers across the country to keep you moving wherever you are.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Section -->
  <section id="fleet" class="py-5 bg-light">
    <div class="container">
      <div class="row text-center mb-4">
        <div class="col">
          <h2>Our Fleet</h2>
          <p class="text-muted">Choose from a variety of premium vehicles</p>
        </div>
      </div>
      <div class="row g-4">
        <!-- Example Car Card -->
        <div class="col-md-4">
          <div class="card h-100">
            <img src="images/sedan.jpg" class="card-img-top fixed-img" alt="Luxury Sedan">
            <div class="card-body">
              <h5 class="card-title">Luxury Sedan</h5>
              <p class="card-text">Experience elegance and comfort with our premium sedans.</p>
              <a href="/fleet" class="btn btn-outline-primary">Rent Now</a>
            </div>
          </div>
        </div>
        <!-- Sport Coupe -->
        <div class="col-md-4">
          <div class="card h-100">
            <img src="images/sport.jpg" class="card-img-top fixed-img" alt="Sport Coupe">
            <div class="card-body">
              <h5 class="card-title">Sport Coupe</h5>
              <p class="card-text">Feel the thrill with our high-performance coupes.</p>
              <a href="/fleet" class="btn btn-outline-primary">Rent Now</a>
            </div>
          </div>
        </div>
        <!-- Family SUV -->
        <div class="col-md-4">
          <div class="card h-100">
            <img src="images/suv.jpg" class="card-img-top fixed-img" alt="Family SUV">
            <div class="card-body">
              <h5 class="card-title">Family SUV</h5>
              <p class="card-text">Spacious and comfortable for family adventures.</p>
              <a href="/fleet" class="btn btn-outline-primary">Rent Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="testimonial">
    <div class="container">
      <div class="row text-center mb-4">
        <div class="col">
          <h2>What Our Customers Say</h2>
        </div>
      </div>
      <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/customer2.jpg" alt="User 1">
            <p class="lead">"The booking process was seamless and the car was immaculate. Highly recommended!"</p>
            <small>- Alex Johnson</small>
          </div>
          <div class="carousel-item">
            <img src="images/customer1.jpg" alt="User 2">
            <p class="lead">"Great service and an impressive selection of vehicles. Truly a five-star experience."</p>
            <small>- Maria Rodriguez</small>
          </div>
          <div class="carousel-item">
            <img src="images/customer3.jpg" alt="User 3">
            <p class="lead">"Exceptional quality and customer care. I can't imagine renting from anywhere else."</p>
            <small>- James Smith</small>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </div>
  </section>

  <!-- Call-to-Action Section -->
  <section class="cta mb-5">
    <div class="container">
      <h2>Ready for Your Next Adventure?</h2>
      <p>Book your ride with CarRentalCo and experience the thrill of the open road.</p>
      <a href="/fleet" class="btn btn-light btn-lg">Book Now</a>
    </div>
  </section>




